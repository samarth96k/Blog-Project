<%- include("header.ejs")%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GenzBlogger</title>
    <link rel="stylesheet" href="stlyes2.css">
</head>
<body>
    <div class="flex-container">
        <div class="blog-list">
                <%if(locals.blog_list && blog_list.length>0){%>
                    <h1>Click on the Blog to view, update or delete</h1>
                    <table>
                        <tr><th>Title</th><th>Category</th><th>Author</th><th>Date</th><th>Action</th></tr>

                        <%for(let i = 0 ; i < blog_list.length ; i++){%>
                            <tr>
                                <td> <%=blog_list[i][0]%> </td>
                                <td> <%=blog_list[i][1]%> </td>
                                <td> <%=blog_list[i][2]%> </td>
                                <td> <%=blog_list[i][4]%> </td>
                                <td><a href="/vlog/<%= i %>" class="view-btn">View</a></td>
                            </tr>
                        <%}%>
                    </table>
                <%}else{%>
                    <h1>Create a new blog now!!</h1>
                <%}%>
        </div>
        <div class="blog-form" >
                <form action="/submit-new-vlog" method="post">

                    <label for="title">Title: </label>
                    <input type="text" name="title" id="title" required> <br>

                    <label for="category">Category: </label>
                    <input type="text" name="category" id="category" required><br>

                    <label for="author">Author's Name: </label>
                    <input type="text" name="author" id="author" required><br>

                    <label for="desc">Blog: </label>
                    <textarea name="desc" id="desc" cols="30" rows="10"></textarea><br>

                    <button type="submit">Post Blog</button>
                </form>
        </div>

    </div>
</body>
</html>
<%-include("footer.ejs")%>